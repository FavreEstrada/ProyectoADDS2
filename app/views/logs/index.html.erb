<% @logs.each do |log| %>
  <tr>
    <td><%= log.NombreTable %></td>
    <td><%= log.CampoAfectado %></td>
    <td><%= log.ValorAnterior %></td>
    <td><%= log.ValorActual %></td>
    <td><%= log.Fecha %></td>
    <td><%= log.Hora %></td>
    <td><%= log.Usuario %></td>
    <td><%= link_to 'Show', log %></td>
    <td><%= link_to 'Edit', edit_log_path(log) %></td>
    <td><%= link_to 'Destroy', log, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

